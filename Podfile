platform :ios, '11.4.1'
use_frameworks!

def install_pods
    # Resource
    pod 'SwiftGen', '~> 6.0.2'
    pod 'SwiftLint', '~> 0.27.0'

    # UI
    pod 'Reusable'

    # Firebase
    pod 'Firebase/Core'
    pod 'Firebase/Firestore'
end

target 'RecordMap' do
  # Pods for RecordMap
  install_pods
end
